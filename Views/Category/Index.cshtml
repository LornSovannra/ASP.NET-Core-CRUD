@using Book_MGS.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

<div style="max-width: 1000px; margin: 20px auto; justify-content: center; align-items: center;">
    
    <partial name="_Notification" />

    <div class="card">
        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
            <h5>Category</h5>
            <a class="btn btn-success" asp-area="" asp-controller="Category" asp-action="Create">Create New Category</a>
        </div>
        <div style="margin: 10px;">
            <table class="table table-hover" border="1">
                <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Name</th>
                      <th scope="col">Display Order</th>
                      <th scope="col">Created Date</th>
                      <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                      {  
                        <tr>
                          <th scope="row">@data.ID</th>
                          <td>@data.Name</td>
                          <td>@data.DisplayOrder</td>
                          <td>@data.CreatedeDateTime</td>
                          <td>
                              <a class="btn btn-primary">View</a>
                              <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@data.ID">Edit</a>
                              <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@data.ID">Delete</a>
                          </td>
                        </tr>
                      }
                </tbody>
            </table>
        </div>
    </div>
</div>