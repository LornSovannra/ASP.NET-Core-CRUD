@using Book_MGS.Models
@model Category

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div style="max-width: 700px; margin: 20px auto; justify-content: center; align-items: center;">
    <form method="POST">
        <div class="card">
            <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                <h5>Create Category</h5>
                <a class="btn btn-warning" asp-controller="Category" asp-action="Index">Back</a>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder"></label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger mt-1"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

